        },
        {
            "name": "Windows-Debug",
            "configurePreset": "Windows-Debug"
        },
        {
            "name": "Windows-Release",
            "configurePreset": "Apple-Release"
        }
    ],
    "testPresets": [
        {
            "name": "Apple-Debug",
            "configurePreset": "Apple-Debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "Apple-Release",
            "configurePreset": "Apple-Release",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "Linux-Debug",
            "configurePreset": "Linux-Debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "Linux-Release",
            "configurePreset": "Linux-Release",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ],
    "packagePresets": [
        {
            "name": "Apple-Release",
            "description": "",
            "displayName": "",
            "configurePreset": "Apple-Release",
            "generators": [
                "ZIP"
            ],
            "configurations": [
                "Apple-Release"
            ]
        },
        {
            "name": "Linux-Release",
            "description": "Package for Linux",
            "displayName": "Linux-Package (Release)",
            "configurePreset": "Linux-Release",
            "generators": [
                "ZIP"
            ],
            "configurations": [
                "Linux-Release"
            ]
        },
        {
            "name": "Linux-Debug",
